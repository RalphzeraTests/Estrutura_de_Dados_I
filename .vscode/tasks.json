{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: gcc build active file",
      "command": "gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "/usr/bin/gdb"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ],
  "version": "2.0.0"
}
